{
    "extends": "@quasar/app/tsconfig-preset",
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "types": [
            "quasar"
        ],
        "paths": {
            "src/*": [
                "src/*"
            ],
            "app/*": [
                "*"
            ],
            "components/*": [
                "src/components/*"
            ],
            "layouts/*": [
                "src/layouts/*"
            ],
            "pages/*": [
                "src/pages/*"
            ],
            "assets/*": [
                "src/assets/*"
            ],
            "boot/*": [
                "src/boot/*"
            ],
            "utils/*": [
                "src/utils/*"
            ],
        },
    },
    "exclude": [
        "/dist",
        ".quasar",
        "cypress/**",
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
